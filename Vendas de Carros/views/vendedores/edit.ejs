<%- include('../partials/header') %>
<%- include('../partials/navbar') %>
<div class="container">
  <h2>Editar Vendedor</h2>
  <form action="/vendedores/<%= vendedor.id_vendedor %>" method="post">
    <div class="mb-3"><label class="form-label">Nome</label><input class="form-control" name="nome" value="<%= vendedor.nome %>" required></div>
    <div class="mb-3"><label class="form-label">Email</label><input class="form-control" name="email" type="email" value="<%= vendedor.email %>" required></div>
    <div class="mb-3"><label class="form-label">Telefone</label><input class="form-control" name="telefone" value="<%= vendedor.telefone %>"></div>
    <div class="mb-3"><label class="form-label">Rede social</label><input class="form-control" name="rede_social" value="<%= vendedor.rede_social %>"></div>
    <button class="btn btn-primary" type="submit">Atualizar</button>
  </form>
</div>
<%- include('../partials/footer') %>
