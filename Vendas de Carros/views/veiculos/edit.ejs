<%- include('../partials/header') %>
<%- include('../partials/navbar') %>
<div class="container">
  <h2>Editar Veículo</h2>
  <form action="/veiculos/<%= veiculo.id_veiculo %>" method="post">
    <div class="mb-3"><label class="form-label">Marca</label><input class="form-control" name="marca" value="<%= veiculo.marca %>" required></div>
    <div class="mb-3"><label class="form-label">Modelo</label><input class="form-control" name="modelo" value="<%= veiculo.modelo %>" required></div>
    <div class="mb-3"><label class="form-label">Ano</label><input class="form-control" name="ano" type="number" value="<%= veiculo.ano %>"></div>
    <div class="mb-3"><label class="form-label">Categoria</label><input class="form-control" name="categoria" value="<%= veiculo.categoria %>"></div>
    <div class="mb-3"><label class="form-label">Preço</label><input class="form-control" name="preco" type="number" step="0.01" value="<%= veiculo.preco %>"></div>
    <div class="mb-3">
      <label class="form-label">Vendedor</label>
      <select name="id_vendedor" class="form-select">
        <option value="">-- selecione --</option>
        <% vendedores.forEach(ven => { %>
          <option value="<%= ven.id_vendedor %>" <%= ven.id_vendedor === veiculo.id_vendedor ? 'selected':'' %>><%= ven.nome %></option>
        <% }) %>
      </select>
    </div>
    <button class="btn btn-primary" type="submit">Atualizar</button>
  </form>
</div>
<%- include('../partials/footer') %>
